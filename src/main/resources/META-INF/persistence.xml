<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="complaint-management-pu" transaction-type="RESOURCE_LOCAL">
        
        <!-- Entity classes will be added here as they are created -->
        <!-- No entity classes configured yet -->
        
        <!-- Entity classes -->
        <class>com.complaintmanagement.model.Citizen</class>
        <class>com.complaintmanagement.model.Complaint</class>
        <class>com.complaintmanagement.model.Authority</class>
        <class>com.complaintmanagement.model.Response</class>
        
        <!-- Database Connection Properties -->
        <!-- Oracle Database Configuration -->
        <properties>
            <!-- Database Connection - Oracle -->
            <property name="jakarta.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
            <property name="jakarta.persistence.jdbc.user" value="system"/>
            <property name="jakarta.persistence.jdbc.password" value="kavinkishore"/>
            
            <!-- Hibernate Specific Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.OracleDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Connection Pool Settings -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            
            <!-- Performance Settings -->
            <property name="hibernate.jdbc.batch_size" value="25"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
        </properties>
        
    </persistence-unit>
    
</persistence>
