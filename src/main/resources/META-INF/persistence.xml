<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="complaint-management-pu" transaction-type="RESOURCE_LOCAL">
        
        <!-- Entity classes will be added here as they are created -->
        <!-- No entity classes configured yet -->
        
        <!-- Database Connection Properties -->
        <!-- These will be overridden by system properties for security -->
        <properties>
            <!-- Database Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="${DB_URL}"/>
            <property name="jakarta.persistence.jdbc.user" value="${DB_USERNAME}"/>
            <property name="jakarta.persistence.jdbc.password" value="${DB_PASSWORD}"/>
            
            <!-- Hibernate Specific Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.OracleDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Connection Pool Settings -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            
            <!-- Transaction Management -->
            <property name="hibernate.current_session_context_class" value="thread"/>
            
            <!-- Performance Settings -->
            <property name="hibernate.jdbc.batch_size" value="25"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            
            <!-- Security: Disable SQL logging in production -->
            <property name="hibernate.session.events.log.LOG_QUERIES_SLOWER_THAN_MS" value="0"/>
        </properties>
        
    </persistence-unit>
    
</persistence>
