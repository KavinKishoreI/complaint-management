<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.complaintmanagement.controller.LoginController"
      alignment="CENTER" 
      spacing="20.0" 
      styleClass="login-container">
    
    <padding>
        <Insets top="50.0" right="50.0" bottom="50.0" left="50.0"/>
    </padding>
    
    <!-- Logo/Icon Placeholder -->
    <Label text="🏛️" styleClass="logo">
        <font>
            <Font size="48.0"/>
        </font>
    </Label>
    
    <!-- Title -->
    <Label text="Complaint Management System" styleClass="title">
        <font>
            <Font name="Arial Bold" size="24.0"/>
        </font>
    </Label>
    
    <!-- Subtitle -->
    <Label text="Please login to continue" styleClass="subtitle">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    
    <!-- Login Form Container -->
    <VBox spacing="15.0" alignment="CENTER" styleClass="form-container">
        <padding>
            <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
        </padding>
        
        <!-- Username Field -->
        <VBox spacing="5.0">
            <Label text="Username" styleClass="field-label">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
            <TextField fx:id="usernameField" 
                       promptText="Enter your username" 
                       styleClass="text-field"
                       prefWidth="300.0"/>
        </VBox>
        
        <!-- Password Field -->
        <VBox spacing="5.0">
            <Label text="Password" styleClass="field-label">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
            <PasswordField fx:id="passwordField" 
                          promptText="Enter your password" 
                          styleClass="password-field"
                          prefWidth="300.0"/>
        </VBox>
        
        <!-- Login Button -->
        <Button fx:id="loginButton" 
                text="Login" 
                onAction="#handleLogin" 
                styleClass="login-button"
                prefWidth="300.0"
                prefHeight="40.0">
            <font>
                <Font name="Arial Bold" size="14.0"/>
            </font>
        </Button>
        
        <!-- Clear Button -->
        <Button fx:id="clearButton" 
                text="Clear" 
                onAction="#handleClear" 
                styleClass="clear-button"
                prefWidth="300.0"
                prefHeight="35.0">
            <font>
                <Font size="12.0"/>
            </font>
        </Button>
    </VBox>
    
    <!-- Status Label for error messages -->
    <Label fx:id="statusLabel" 
           text="" 
           styleClass="status-label"
           visible="false"
           wrapText="true"
           maxWidth="300.0"/>
    
</VBox>
