<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.complaintmanagement.controller.DashboardController"
           prefHeight="600.0" prefWidth="800.0"
           style="-fx-background-color: #ecf0f1;">
    
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-padding: 20px;">
            <Label text="Complaint Management System" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="lblWelcome" text="Welcome, User!" style="-fx-text-fill: white; -fx-font-size: 14px;">
                <VBox.margin>
                    <Insets top="5.0"/>
                </VBox.margin>
            </Label>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20.0" alignment="CENTER" style="-fx-padding: 30px;">
            
            <Label text="Quick Actions" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            
            <HBox spacing="20.0" alignment="CENTER">
                <!-- Register Complaint Button -->
                <Button fx:id="btnRegisterComplaint" 
                        text="📝 Register New Complaint" 
                        onAction="#handleRegisterComplaint"
                        prefWidth="250.0"
                        prefHeight="80.0"
                        style="-fx-background-color: linear-gradient(to bottom, #27ae60 0%, #229954 100%);
                               -fx-text-fill: white;
                               -fx-background-radius: 10px;
                               -fx-cursor: hand;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 5, 0, 0, 2);">
                </Button>
                
                <!-- View Complaints Button -->
                <Button text="📋 View My Complaints" 
                        prefWidth="250.0"
                        prefHeight="80.0"
                        style="-fx-background-color: linear-gradient(to bottom, #3498db 0%, #2980b9 100%);
                               -fx-text-fill: white;
                               -fx-background-radius: 10px;
                               -fx-cursor: hand;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 5, 0, 0, 2);">
                </Button>
            </HBox>
            
            <HBox spacing="20.0" alignment="CENTER">
                <!-- Track Complaint Button -->
                <Button text="🔍 Track Complaint" 
                        prefWidth="250.0"
                        prefHeight="80.0"
                        style="-fx-background-color: linear-gradient(to bottom, #f39c12 0%, #e67e22 100%);
                               -fx-text-fill: white;
                               -fx-background-radius: 10px;
                               -fx-cursor: hand;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 5, 0, 0, 2);">
                </Button>
                
                <!-- Profile Button -->
                <Button text="👤 My Profile" 
                        prefWidth="250.0"
                        prefHeight="80.0"
                        style="-fx-background-color: linear-gradient(to bottom, #9b59b6 0%, #8e44ad 100%);
                               -fx-text-fill: white;
                               -fx-background-radius: 10px;
                               -fx-cursor: hand;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 5, 0, 0, 2);">
                </Button>
            </HBox>
            
            <VBox.margin>
                <Insets top="50.0"/>
            </VBox.margin>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 15px; -fx-background-color: #34495e;">
            <Button text="Logout" 
                    fx:id="btnLogout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c;
                           -fx-text-fill: white;
                           -fx-background-radius: 5px;
                           -fx-cursor: hand;
                           -fx-padding: 10px 30px;"/>
        </HBox>
    </bottom>
    
</BorderPane>

