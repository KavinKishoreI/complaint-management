<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.complaintmanagement.controller.DashboardController"
           prefHeight="700.0" prefWidth="1200.0"
           styleClass="dashboard-root"
           stylesheets="@../css/dashboard.css">
    
    <top>
        <VBox styleClass="header-section">
            <padding>
                <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Complaint Management System" styleClass="header-title">
                        <font>
                            <Font name="Arial Bold" size="26.0"/>
                        </font>
                    </Label>
                    <Label fx:id="lblWelcome" text="Welcome, User!" styleClass="header-subtitle">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                </VBox>
                <Button text="Logout" 
                        fx:id="btnLogout"
                        onAction="#handleLogout"
                        styleClass="logout-button">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" styleClass="content-scroll">
            <VBox spacing="25.0" styleClass="dashboard-content">
                <padding>
                    <Insets top="25.0" right="30.0" bottom="25.0" left="30.0"/>
                </padding>
                
                <!-- Statistics Cards Section -->
                <VBox spacing="10.0">
                    <Label text="Overview" styleClass="section-title">
                        <font>
                            <Font name="Arial Bold" size="18.0"/>
                        </font>
                    </Label>
                    
                    <GridPane hgap="20.0" vgap="20.0">
                        <!-- Total Complaints Card -->
                        <VBox styleClass="stat-card, stat-card-primary" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                            </padding>
                            <Label text="ï¿½ Total Complaints" styleClass="stat-label">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label fx:id="lblTotalComplaints" text="0" styleClass="stat-value">
                                <font>
                                    <Font name="Arial Bold" size="32.0"/>
                                </font>
                            </Label>
                            <Label text="All time" styleClass="stat-sublabel">
                                <font>
                                    <Font size="11.0"/>
                                </font>
                            </Label>
                        </VBox>
                        
                        <!-- Pending Complaints Card -->
                        <VBox styleClass="stat-card, stat-card-warning" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                            </padding>
                            <Label text="â³ Pending" styleClass="stat-label">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label fx:id="lblPendingComplaints" text="0" styleClass="stat-value">
                                <font>
                                    <Font name="Arial Bold" size="32.0"/>
                                </font>
                            </Label>
                            <Label text="Awaiting action" styleClass="stat-sublabel">
                                <font>
                                    <Font size="11.0"/>
                                </font>
                            </Label>
                        </VBox>
                        
                        <!-- In Progress Card -->
                        <VBox styleClass="stat-card, stat-card-info" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                            </padding>
                            <Label text="ðŸ”„ In Progress" styleClass="stat-label">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label fx:id="lblInProgressComplaints" text="0" styleClass="stat-value">
                                <font>
                                    <Font name="Arial Bold" size="32.0"/>
                                </font>
                            </Label>
                            <Label text="Being resolved" styleClass="stat-sublabel">
                                <font>
                                    <Font size="11.0"/>
                                </font>
                            </Label>
                        </VBox>
                        
                        <!-- Resolved Complaints Card -->
                        <VBox styleClass="stat-card, stat-card-success" GridPane.columnIndex="3" GridPane.rowIndex="0">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                            </padding>
                            <Label text="âœ… Resolved" styleClass="stat-label">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Label>
                            <Label fx:id="lblResolvedComplaints" text="0" styleClass="stat-value">
                                <font>
                                    <Font name="Arial Bold" size="32.0"/>
                                </font>
                            </Label>
                            <Label text="Completed" styleClass="stat-sublabel">
                                <font>
                                    <Font size="11.0"/>
                                </font>
                            </Label>
                        </VBox>
                    </GridPane>
                </VBox>
                
                <!-- Quick Actions Section -->
                <VBox spacing="10.0">
                    <Label text="Quick Actions" styleClass="section-title">
                        <font>
                            <Font name="Arial Bold" size="18.0"/>
                        </font>
                    </Label>
                    
                    <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <Button fx:id="btnRegisterComplaint" 
                                text="ï¿½ Register New Complaint" 
                                onAction="#handleRegisterComplaint"
                                styleClass="action-button, action-button-primary"
                                prefWidth="220.0"
                                prefHeight="50.0">
                            <font>
                                <Font name="Arial Bold" size="14.0"/>
                            </font>
                        </Button>
                        
                        <Button fx:id="btnRefresh"
                                text="ï¿½ Refresh" 
                                onAction="#handleRefresh"
                                styleClass="action-button, action-button-outline"
                                prefWidth="150.0"
                                prefHeight="50.0">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                    </HBox>
                </VBox>
                
                <!-- Recent Complaints Section -->
                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="Recent Complaints" styleClass="section-title" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Arial Bold" size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="lblLastUpdated" text="Last updated: Just now" styleClass="last-updated">
                            <font>
                                <Font size="11.0"/>
                            </font>
                        </Label>
                    </HBox>
                    
                    <TableView fx:id="tblRecentComplaints" styleClass="complaints-table" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="60.0"/>
                            <TableColumn fx:id="colTitle" text="Title" prefWidth="280.0"/>
                            <TableColumn fx:id="colType" text="Type" prefWidth="150.0"/>
                            <TableColumn fx:id="colDepartment" text="Department" prefWidth="180.0"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="120.0"/>
                            <TableColumn fx:id="colDate" text="Date" prefWidth="150.0"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    
                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                        <Label fx:id="lblTableInfo" text="Showing 0 complaints" styleClass="table-info">
                            <font>
                                <Font size="11.0"/>
                            </font>
                        </Label>
                    </HBox>
                </VBox>
                
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>

